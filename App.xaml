<Application
    x:Class="Caro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:Caro.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <helpers:PositionToBorderThicknessConverter x:Key="PositionToBorderThicknessConverter" />
            <helpers:InversibleBooleanToVisibilityConverter x:Key="InversibleBooleanToVisibilityConverter" />
            <helpers:PlayerToColorConverter x:Key="PlayerToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
